<article id="<%= post.layout %>-<%= post.slug %>" 
  class="article article-type-<%= post.layout %>" itemprop="blogPost">
     <%- partial('post/title', { hasLink: true }) %>
    <div class="post-meta">
        <%- partial('post/date', {date_format: config.date_format}) %>
        <%- partial('post/category') %> 
    </div>
    
    <div class="post-content" id="post-content" itemprop="postContent" >
    <% if (post.excerpt){ %>
        <%- post.excerpt %>
        <a href="<%- url_for(post.path) %>" class="post-more waves-effect waves-button waves-light">阅读全文...</a>
    <% } else { %>
        <%- post.content %>
    <% } %>
    </div>
    <%- partial('post/tag') %>
</article>